<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacground"
    android:orientation="vertical"
    android:weightSum="15"
    tools:context=".ui.GameActivity5x5"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="vertical"
        android:paddingTop="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:drawableTint="@color/black">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:drawableEnd="@drawable/info2"
            android:drawableTint="@color/black">

        </TextView>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">


        <RelativeLayout
            android:id="@+id/btn_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#4C4C4C">


            <Button
                android:id="@+id/btn1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rang1_1"
                android:onClick="buttonClick"
                android:tag="0:0"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                tools:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/btn1"
                android:background="@drawable/rang1_1"
                android:onClick="buttonClick"
                android:tag="0:1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                tools:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/btn2"
                android:background="@drawable/rang1_1"
                android:onClick="buttonClick"
                android:tag="0:2"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                tools:text="3" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/btn1"
                android:layout_alignParentStart="true"
                android:background="@drawable/rang1_1"
                android:onClick="buttonClick"
                android:tag="1:0"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                tools:text="4" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/btn2"
                android:layout_toEndOf="@id/btn4"
                android:background="@drawable/rang1_1"
                android:onClick="buttonClick"
                android:tag="1:1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                tools:text="5" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/btn3"
                android:layout_toEndOf="@id/btn5"
                android:background="@drawable/rang1_1"
                android:onClick="buttonClick"
                android:tag="1:2"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                tools:text="6" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/btn4"
                android:layout_alignParentStart="true"
                android:background="@drawable/rang1_1"
                android:onClick="buttonClick"
                android:tag="2:0"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                tools:text="7" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/btn5"
                android:layout_toEndOf="@id/btn7"
                android:background="@drawable/rang1_1"
                android:onClick="buttonClick"
                android:tag="2:1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                tools:text="8" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/btn6"
                android:layout_toEndOf="@id/btn8"
                android:onClick="buttonClick"
                android:tag="2:2"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                tools:text="9" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/timer_24"
                android:drawableTint="@color/black"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:text="00:00:00"
                android:textColor="@color/black"
                android:textSize="22sp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/step"
                android:drawableTint="@color/black"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="22sp">

            </TextView>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_play_arrow_24"
            app:tint="@color/black"></ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/restat"
            app:tint="@color/black"></ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/voleu_24"
            app:tint="@color/black"></ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_bar_chart_24"
            app:tint="@color/black"></ImageView>


    </LinearLayout>
</LinearLayout>