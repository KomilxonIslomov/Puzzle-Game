<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient android:angle="45" android:centerColor="#000000" android:endColor="#000000" android:startColor="#000000" />
            <stroke android:width="2dp" android:color="#D50741" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <gradient android:angle="45" android:centerColor="#000000" android:endColor="#000000" android:startColor="#000000" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="45" android:centerColor="#000000" android:endColor="#000000" android:startColor="#000000" />
        </shape>
    </item>


</selector>